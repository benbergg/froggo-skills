{
  "description": "知识库智能检测 Hook",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "^(Write|Edit)$",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/knowledge-lib-hook.sh",
            "timeout": 3000,
            "continueOnError": true
          }
        ]
      }
    ]
  }
}
