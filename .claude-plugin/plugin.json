{
  "name": "froggo-skills",
  "version": "1.6.0",
  "description": "个人工作流增强技能：文档管理、Git 提交规范、MCP 智能搜索等",
  "author": {
    "name": "benbergg"
  },
  "license": "MIT",
  "repository": "https://github.com/benbergg/froggo-skills",
  "keywords": [
    "claude-skill",
    "claude-code",
    "documentation",
    "git",
    "workflow",
    "obsidian",
    "context7",
    "claude-context",
    "mcp"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "^(Write|Edit)$",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/knowledge-lib-hook.sh",
            "timeout": 3000,
            "continueOnError": true
          }
        ]
      }
    ]
  }
}
